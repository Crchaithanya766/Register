@model Registrationformusingjquery.Models.EmployeeReg
@{
    ViewBag.Title = "LoginPage";
}

<h2>LoginPage</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 alert alert-warning">
            <h2 class="text-center">Login</h2>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" id="txtusername" class="form-control" placeholder="Username">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" class="form-control" id="txtpassword" placeholder="Password">
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <button class="btn btn-warning form-control" type="submit" id="savedata"><i class="glyphicon glyphicon-log-in"></i>&nbsp;Login</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#savedata').click(function () {
            debugger;
            var model = {
                "Username": $("#txtusername").val(),
                "Password": $("#txtpassword").val()
            };
            $.ajax({
                url: "/Employee/LoginPage",
                type: "POST",
                data: JSON.stringify(model),
                dataType: "json",
                contentType: "application/json",
                success: function (response) {
                    if (response.Success) {
                        @*$.get("@Url.Action("Employee", "Index")", function (model) {
                            $('.container').html(model);*@
                            window.location.href = "http://localhost:51410/Login/Index";

                        
                        }
                    else
                        window.location.href = "http://localhost:51410/Employee/LoginPage";
                },
                error: function () {
                    console.log('Login Fail!!!');
                }
            });
        });
    });
    </script>